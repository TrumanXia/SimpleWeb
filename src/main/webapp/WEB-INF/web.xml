<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<servlet>
		<servlet-name>timeServlet</servlet-name>
		<servlet-class>xyg.study.servlet.TimeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>commonServlet</servlet-name>
		<servlet-class>xyg.study.servlet.CommonServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>timeServlet</servlet-name>
		<url-pattern>/timeServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>commonServlet</servlet-name>
		<url-pattern>*.action</url-pattern>
	</servlet-mapping>
	
</web-app>
